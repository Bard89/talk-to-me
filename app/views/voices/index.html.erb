<h2>Voices for <%= @document.title %></h2>

<% if @voices.any? %>
  <ul>
    <% @voices.each do |voice| %>
      <li>
        <%= voice.voice_type %> - <%= voice.status %>
        <%= audio_tag document_voice_path(@document, voice), controls: true %>
        <%= link_to 'Delete', document_voice_path(@document, voice), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No voices generated yet.</p>
<% end %>

<%= button_to 'Generate New Voice', document_voices_path(@document), method: :post, data: { turbo: false } %>
<%= link_to 'Back to Document', document_path(@document) %>