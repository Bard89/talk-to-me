<h1><%= @document.title %></h1>

<p>
  <strong>Type:</strong>
  <%= @document.document_type %>
</p>

<p>
  <strong>Status:</strong>
  <%= @document.status %>
</p>

<p>
  <strong>Content:</strong>
  <%= @document.content %>
</p>

<h2>Voices</h2>
<%= link_to 'View All Voices', document_voices_path(@document) %>

<% if @document.voices.any? %>
  <ul>
    <% @document.voices.each do |voice| %>
      <li>
        <%= voice.voice_type %> - <%= voice.status %>
        <%= audio_tag document_voice_path(@document, voice), controls: true %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No voices generated yet.</p>
<% end %>

<%= link_to 'Generate New Voice', document_voices_path(@document), method: :post, class: 'generate-button' %>

<%= link_to 'Edit', edit_document_path(@document) %> |
<%= link_to 'Back', documents_path %>