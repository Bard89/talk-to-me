<h1><%= @document.title %></h1>

<p>
  <strong><%= t('models.document.type') %>:</strong>
  <%= @document.document_type %>
</p>

<p>
  <strong><%= t('models.document.status') %>:</strong>
  <%= @document.status %>
</p>

<p>
  <strong><%= t('models.document.content') %>:</strong>
  <%= @document.content %>
</p>
<hr>
<h2><strong><%= t('enumerize.voice.few') %></strong></h2>
<ul>
  <% @document.voices.each do |voice| %>
    <li>
      <%= voice.voice_type %> - <%= voice.status %>
      <%= audio_tag play_document_voice_path(@document, voice), controls: true %>
      <%= link_to t('links.download', item: t('voice')), download_document_voice_path(@document, voice) %>
      <hr>
    </li>
  <% end %>
</ul>

<%= button_to t('links.generate_new', item: t('voice')), document_voices_path(@document), method: :post, data: { turbo: false } %>

<%= link_to t('links.edit', item: t('enumerize.document.one')), edit_document_path(@document) %> |
<%= link_to t('links.back'), documents_path %>